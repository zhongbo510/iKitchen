<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.rainbow.kitchen.fragment.Mine">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/black"
        >


        <TextView
            android:id="@+id/mine_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine"
            android:textSize="20sp"
            android:layout_gravity="center"
            />
        <ImageButton
            android:id="@+id/imgset"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@mipmap/set"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            />
    </android.support.v7.widget.Toolbar>
        <com.rainbow.kitchen.view.MineScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/mine_head1"
                        />
                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:layout_margin="20dp"
                        android:background="@drawable/foods_selector"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/agree"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="作品（0）"
                        android:layout_marginLeft="40dp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="关注（0）"
                        android:layout_marginLeft="20dp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="粉丝（0）"
                        android:layout_marginRight="40dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="@string/mine_message"
                            android:textSize="18sp"
                            />
                        <ImageView
                            android:id="@+id/iv_hongbao"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/arrow"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="@string/mine_hongbao"
                            android:textSize="18sp"
                            />
                        <ImageView
                            android:id="@+id/iv_message"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/arrow"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="@string/mine_collection"
                            android:textSize="18sp"
                            />
                        <ImageView
                            android:id="@+id/iv_collection"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/arrow"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="@string/mine_cache"
                            android:textSize="18sp"
                            />
                        <ImageView
                            android:id="@+id/iv_cache"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/arrow"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="@string/you_like"
                            android:textSize="18sp"
                            />
                        <ImageView
                            android:id="@+id/iv_youlike"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/arrow"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="@string/invite_friend"
                            android:textSize="18sp"
                            />
                        <ImageView
                            android:id="@+id/iv_invite"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/arrow"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="@string/contact_us"
                            android:textSize="18sp"
                            />
                        <ImageView
                            android:id="@+id/iv_contactus"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/arrow"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="退出登录"
                        android:id="@+id/exit"
                        />
                </LinearLayout>


            </LinearLayout>
        </com.rainbow.kitchen.view.MineScrollView>
    </LinearLayout>
</FrameLayout>
