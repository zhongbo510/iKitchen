<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<ImageView
    android:id="@+id/iv_exprtdetalis01"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_exprtdetalis01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageView
            android:id="@+id/iv_exprtdetalis01_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/default_point"
            />
        <TextView
            android:id="@+id/tv_exprtdetalis01_nike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/iv_exprtdetalis01_head"/>
        <TextView
            android:id="@+id/tv_exprtdetalis01_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_exprtdetalis01_nike"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/iv_exprtdetalis01_head"/>
        <ImageView
            android:id="@+id/iv_exprtdetalis01_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/default_point"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <ListView
        android:id="@+id/lv_exprtdetalis01_talks"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/img_agree"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/zan"

                />

            <TextView
                android:id="@+id/tv_exprtdetalis01_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="点赞数" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/img_comment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/comment" />

            <TextView
                android:id="@+id/tv_exprtdetalis01_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="评论数" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/iv_exprtdetalis01_share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/share" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>